%                  & |a|-|z| & |n|-|z|\,|a|-|m|\\
% \hline
%   \textbf{ROT47} & |!|-|~| & |P|-|~|\,|!|-|O|\\
% \end{tabular}
% \end{center}
% In case of ROT47 the range is the ASCII range from character codes
