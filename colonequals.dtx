%           & ; & \\[1ex]
%   col     & \coloncolonequals & '\texttt{:}' \\
%           & \mid & '\texttt{::}' \\
%           & ; & \\[1ex]
%   symbol  & \coloncolonequals & '\texttt{=}' \\
%           & \mid & '\texttt{-}' \\
%           & \mid & '$\approx$' \\
%           & \mid & '$\sim$' \\
